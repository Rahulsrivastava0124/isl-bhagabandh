<%- include('./Nav') %>

<h2 class="text-center text-danger">Re-Admission data</h2>
<div class="container" style="max-width:700px ;">
    <h3 class=" border-bottom border-primary">Current School detial</h3>
    <form action="/Edit_submit_new_addmission/<%= data._id %> " method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="First_name"  <%=input_Status%>  required
                value="  <%=data.Admission_data.First_name%>">
            <label for="exampleFormControlInput1">Student First Name</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="Last_name" <%=input_Status%>  required
                value="  <%=data.Admission_data.Lastname%>">
            <label for="exampleFormControlTextarea1">Student Last Name</label>
        </div>
        <div class="d-flex">
            <label for="exampleFormControlTextarea1" class="p-3">Gender</label>
            <div class="form-check p-3">
                <input class="form-check-input " type="radio" name="Check" id="flexRadioDefault1"  <%=input_Status%> value='on'>
                <label class="form-check-label" for="flexRadioDefault1">
                    Male
                </label>
            </div>
            <div class="form-check p-3">
                <input class="form-check-input " type="radio" name="Check" id="flexRadioDefault2" <%=input_Status%>  value="off">
                <label class="form-check-label" for="flexRadioDefault2">
                    Female
                </label>
            </div>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control " list="datalistOptions" id="floatingInput"   name="class" required
                value=<%=data.Admission_data.class%>>
            <datalist id="datalistOptions">
                <option value="LKG">
                <option value="UKG">
                <option value="1">
                <option value="2">
                <option value="3">
                <option value="4">
                <option value="5">
                <option value="6">
                <option value="7">
                <option value="8">
                <option value="9">
                <option value="10">
                <option value="11">
                <option value="12">
            </datalist>
            <label for="exampleFormControlTextarea1">Class You Want To Apply For</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="date" class="form-control " id="floatingInput" name="date" <%=input_Status%>  required ">
                <label for=" exampleFormControlTextarea1">Student Birth Date</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="number" class="form-control " id="floatingInput" name="Age" <%=input_Status%>  required
                value=<%=data.Admission_data.Age%>>
            <label for="exampleFormControlTextarea1">Student Age</label>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control " id="floatingInput" name="Adhaar_number" <%=input_Status%>  required
                value=<%=data.Admission_data.Adhaar_number%>>
            <label for="exampleFormControlTextarea1">Adhaar Number</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="Father_name"  <%=input_Status%> required
                value="  <%=data.Admission_data.Father_name%>">
            <label for="exampleFormControlTextarea1">Father Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="Mother_name" <%=input_Status%>  required
                value="  <%=data.Admission_data.Mother_name%>">
            <label for="exampleFormControlTextarea1">Mother Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="Guardian_name" <%=input_Status%>  required
                value="  <%=data.Admission_data.Guardian_name%>">
            <label for="exampleFormControlTextarea1">Parent/Guardian Name</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="Address" <%=input_Status%>  required
                value="  <%=data.Admission_data.Address%>">
            <label for="exampleFormControlTextarea1">Postal Address</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="Address2" <%=input_Status%>  required
                value="  <%=data.Admission_data.Address2%>">
            <label for="exampleFormControlTextarea1">Postal Address 2</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="City" <%=input_Status%>  required
                value="  <%=data.Admission_data.City%>">
            <label for="exampleFormControlTextarea1">City</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="text" class="form-control " id="floatingInput" name="State" <%=input_Status%>  required
                value=" <%=data.Admission_data.State%>">
            <label for="exampleFormControlTextarea1">State</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="number" class="form-control " id="floatingInput" name="Zip_code" <%=input_Status%>  required
                value=<%=data.Admission_data.Zip_code%>>
            <label for="floatingInput">Postal/Zip Code</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="number" class="form-control " id="floatingInput" name="Phone" <%=input_Status%>  required
                value=<%=data.Admission_data.Phone%>>
            <label for="floatingInput">Phone No.</label>
        </div>
        <div class=" form-floating mb-3">
            <input type="email" class="form-control " id="floatingInput" name="email" <%=input_Status%>  required
                value="  <%=data.Admission_data.email%>">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label">Student image</label>
            <input class="form-control" type="file" id="image" name="image"  <%=input_Status%> required>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label">Signature image</label>
            <input class="form-control" type="file" id="image1" name="image1" value="studentImg.png" <%=input_Status%>  required>
        </div>
      
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
</div>







<%- include('./Footer') %>