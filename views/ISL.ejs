<%- include("./Nav")-%>
  <style>
    .contact_container_height {
      height: 500px;
    }
  </style>
  <% if (states=='true' ) { %>
    <div class="position-relative"></div>
    <div
      class="toast align-items-center text-white bg-danger border-0 d-block m-auto mt-5  position-absolute top-0 start-50 translate-middle "
      id="Toast_div" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body"><i class="bi bi-check-circle-fill"></i>
          Removed succusfully
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" id="toast_close_btn"></button>
      </div>
    </div>
    <% } %>
      <h1 class="text-center">ISL</h1>
      <div class="container d-flex flex-wrap justify-content-evenly">

        <a href="/new_admission"> <button type="button" class="btn btn-primary btn-lg p-5 m-2 box_shodaw"><i
              class="bi bi-person-plus-fill h1"></i><br>
            <h6>New Admission</h6>
          </button></a>
        <a href="/re-admission"> <button type="button" class="btn btn-success btn-lg p-5 m-2 box_shodaw"><i
              class="bi bi-plus-square-dotted h1"></i><br>
            <h6>Re-Admission</h6>
          </button></a>
        <a href="/fee-submission"> <button type="button" class="btn btn-danger btn-lg p-5 m-2 box_shodaw"><i
              class="bi bi-person-plus-fill h1"></i><br>
            <h6>Fee-Submission</h6>
          </button></a>
        <a href=" 9th_addmission"> <button type="button" class="btn btn-warning btn-lg p-5 m-2 box_shodaw"><i
              class="bi bi-person-plus-fill h1"></i><br>
            <h6>9th and 10th Admission</h6>
          </button></a>
        <a href="all_Student_list"> <button type="button" class="btn btn-secondary btn-lg p-5 m-2 box_shodaw"><i
              class="bi bi-person-plus-fill h1"></i><br>
            <h6>All Student</h6>
          </button></a>
      </div>
      <div class="container w-50 overflow-auto Query">
        <h2 class="bg-secondary rounded-4 sticky-top text-center w-100 ">Query</h2>

        <%data!=null?data.forEach(element=> { %>
          <a class="list-group-item list-group-item-action rounded-3 shadow-lg p-3 mb-3 bg-body " aria-current="true">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">
                <%=element.Username %>
              </h5>
              <small id="<%=element._id%>">
                <%=element.Date%>
              </small>
              <!-- slice date in javaScript -->
              <script>
                document.getElementById("<%=element._id%>").innerText = "<%=element.Date%>".slice(0, 16);
              </script>
            </div>
            <p class="mb-1">
              <%= element.Description %>
            </p>
            <small>
              <%= element.PhoneNumber %>
            </small>
            <small class="">
              <div class="collapse mb-2" id='collapseExample<%=element._id%>'>
                <div class="card card-body">
                  <%= element.Email %><br>
                    <%= element.City %><br>
                      <%= element.Address %><br>
                </div>
              </div>
            </small>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end align-items-center">
              <button class="btn btn-primary m-2 " type="button" data-bs-toggle="collapse"
                data-bs-target='#collapseExample<%= element._id %>' aria-expanded="false"
                aria-controls="collapseExample1">
                More <i class="bi bi-arrows-expand"></i>
              </button>
              <form action="" method="post">
                <button class="btn btn-success" type="submit"><i class="bi bi-check-circle"></i></button>
              </form>
              <form action="/ISL/Query/<%= element._id%> " method="post"> <button class="btn btn-danger" id="delete_btn"
                  type="submit"><i class="bi bi-trash"></i></button>
              </form>
            </div>
          </a>

          <% }):null %>

      </div>
      </div>
      <a href="/logout" class="d-grid gap-2 col-6 mx-auto btn btn-danger mb-3 w-25" id="logout_button">Logout</a>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
      <script>

        if (document.getElementById('toast_close_btn') != null) {
          document.getElementById('toast_close_btn').addEventListener('click', () => {
            document.getElementById('Toast_div').classList.remove('d-block');
          });
          let btn_value = document.getElementById('Toast_div').classList;
          if (btn_value[5] == 'd-block') {
            const collaps_btn = setInterval(() => {
              document.getElementById('Toast_div').classList.remove('d-block');
            }, 3000);
          } else {
            clearInterval(collaps_btn);
          }
        }


      </script>